{
  "header": {
    "blocks": ["header-layout.desktop", "header-layout.mobile"]
  },
  "header.full": {
    "blocks": ["header-layout.desktop", "header-layout.mobile"]
  },
  "header-layout.desktop": {
    "children": [
      "flex-layout.row#header-1-desktop",
      "flex-layout.row#header-2-desktop",
      "flex-layout.row#header-3-desktop",
      "sticky-layout#header-4"
    ]
  },

  "flex-layout.row#header-1-desktop": {
    "children": ["telemarketing"],
    "props": {
      "fullWidth": true
    }
  },

  "flex-layout.row#header-2-desktop": {
    "children": ["notification.bar#home"],
    "props": {
      "fullWidth": true
    }
  },
  "notification.bar#home": {
    "props": {
      "content": "SELECTED ITEMS ON SALE! CHECK IT OUT!"
    }
  },
  "flex-layout.row#header-3-desktop": {
    "children": [
      "vtex.menu@2.x:menu#websites",
      "header-spacer",
      "vtex.menu@2.x:menu#institutional"
    ],
    "props": {
      "blockClass": "menu-link",
      "colSizing": "auto"
    }
  },

  "sticky-layout#header-4": {
    "props": {
      "position": "top"
    },
    "children": ["flex-layout.row#header-4-desktop"]
  },

  "flex-layout.row#header-4-desktop": {
    "children": [
      "logo#desktop",
      "vtex.menu@2.x:menu#category-menu",
      "header-spacer",
      "header-spacer",
      "search-bar",
      "locale-switcher",
      "login",
      "minicart"
    ],
    "props": {
      "colSizing": "auto",
      "fullWidth": true,
      "blockClass": "main-header"
    }
  },
  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo.png",
      "width": "180"
    }
  },

  "minicart": {
    "blocks": ["product-summary"],
    "props": {
      "type": "popup",
      "showRemoveButton": true,
      "showDiscount": true,
      "showSku": true,
      "labelMiniCartEmpty": "",
      "labelButtonFinishShopping": "Go to checkout",
      "enableQuantitySelector": true,
      "maxQuantity": 10,
      "labelClasses": "gray"
    }
  },

  "header-layout.mobile": {
    "children": ["flex-layout.row#header-1-mobile"]
  },
  "flex-layout.row#header-1-mobile": {
    "children": [
      "flex-layout.col#header-1-mobile",
      "flex-layout.col#header-2-mobile",
      "flex-layout.col#header-3-mobile"
    ],
    "props": {
      "fullWidth": true,
      "colSizing": "equal",
      "preserveLayoutOnMobile": true,
      "blockClass": "main-header-mobile"
    }
  },
  "flex-layout.col#header-1-mobile": {
    "children": ["drawer"]
  },
  "flex-layout.col#header-2-mobile": {
    "children": ["logo#mobile"],
    "props": {
      "preventVerticalStretch": true,
      "blockClass": "main-header-logo-mobile"
    }
  },
  "flex-layout.col#header-3-mobile": {
    "children": ["minicart"]
  },

  "drawer": {
    "children": ["menu#drawer"]
  },

  "menu#drawer": {
    "children": [
      "menu-item#category-clothing",
      "menu-item#category-decoration",
      "menu-item#custom-sale"
    ],
    "props": {
      "orientation": "vertical"
    }
  },

  "logo#mobile": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo-mobile.png",
      "width": "70"
    }
  }
}
